-- create view
CREATE VIEW StudentHostelPaymentView AS
SELECT 
    s.student_id, 
    s.name AS student_name, 
    h.hostel_name, 
    r.room_number, 
    p.amount, 
    p.payment_date
FROM student s
JOIN allocation a ON s.student_id = a.student_id
JOIN room r ON a.room_id = r.room_id
JOIN hostel h ON r.hostel_id = h.hostel_id
LEFT JOIN payment p ON s.student_id = p.student_id;
--abstract
SELECT * FROM StudentHostelPaymentView;
--security
CREATE VIEW PublicStudentView AS
SELECT StudentID, StudentName, HostelID
FROM student;
